<%= render partial: 'layouts/header'%>
<div class="container">

	<%= form_tag "/pias", :method => 'get' do %>
	  <%= text_field_tag :search %>
	  <%= submit_tag 'Buscar', :class => "btn btn-primary" %>
	<% end %>

	<p>filtrar por</p>
	<div class="pias-filters">
		<% @categories.each do |category| %>
		    <a class="<%= 'active' if '/pias/'+category.pid == request.path_info %>"
		     href='<%= "/pias/#{category.pid}" %>'>
		    	<%= category.titulo %>
		    </a>
		<%end %>
	</div>

	<div class="pias-content">
		<%= nested_pias @pia %>
	</div>
</div>

<script>
	$(document).ready(function(){

	var activeFilter;
	$('.pias-filters a').click(function(e){
		if(window.location.href === this.href){
			var url = location.origin + "/pias";    
			$(location).attr('href',url);	
			e.preventDefault();
		}
	});

	function toggleIcon() {
        $(this).find('.pias-link-icon')
            .toggleClass('fa-angle-up fa-angle-down');
    }
    $('.pias-link').on('click', toggleIcon);
	});
</script>